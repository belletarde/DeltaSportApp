<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.enterprise.barsemlona.barsemlona_20.LoginActivity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_logo_new"
        android:id="@+id/imageView4" />

    <EditText
        android:id="@+id/id_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:hint="Digite seu E-mail"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/id_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_login"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="Digite sua Senha"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_pass"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_login"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Cadastre-se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_slogin"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />
</LinearLayout>