<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="0dp"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nm_product_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:text="Nome do Produto"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/price_product_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="PreÃ§o do Produto"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remove_product_checkout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/cardview_light_background" />

                <TextView
                    android:id="@+id/qtd_product_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantidade"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:id="@+id/add_product_checkout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>

            <Button
                android:id="@+id/excluirProduto"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="0.62"
                android:elevation="0dp"
                android:text="Excluir"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>