<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enterprise.barsemlona.barsemlona_20.TelaSobreFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Sobre"
        android:ems="10"
        android:layout_marginTop="9dp"
        android:id="@+id/editText2"
        android:layout_marginLeft="10dp"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

        <TextView
        android:text="O projeto foi desenvolvido com base no curso de TSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Integrantes"
        android:ems="10"
        android:layout_marginTop="9dp"
        android:id="@+id/editText7"
        android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
        android:text="Alexandre Kenji, Kevin Belletarde, Mateus Martins, Vinicius Oliveira,Tonielton Mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/editText7"
        android:layout_alignParentStart="true" />
    </LinearLayout>
</FrameLayout>
