<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enterprise.barsemlona.barsemlona_20.CarrinhoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/totalComprado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 9999,00"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/voltarComprar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:text="Voltar as compras"
                android:textColor="@color/cardview_light_background"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/finalizarCompra"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:text="Finalizar compra"
                android:textColor="@color/cardview_light_background"
                android:backgroundTint="@color/colorAccent" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/carrinhoListagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

</FrameLayout>
