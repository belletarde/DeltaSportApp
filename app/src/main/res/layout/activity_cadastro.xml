<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/nomeCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome" />

        <EditText
            android:id="@+id/sobrenomeCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomeCadastro"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Sobrenome" />

        <EditText
            android:id="@+id/emailCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="E-mail" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de nascimento:"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/diaNascCadastro"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.27"
                android:text="/"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/mesNascCadastro"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:text="/"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/anoNascCadastro"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27" />

        </LinearLayout>

        <EditText
            android:id="@+id/senhaCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sobrenomeCadastro"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Senha" />

        <EditText
            android:id="@+id/cpfCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogroup"
            android:ems="10"
            android:inputType="number"
            android:hint="CPF" />

        <EditText
            android:id="@+id/celCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Tel - Celular" />

        <EditText
            android:id="@+id/telResCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Tel - Residencial" />

        <EditText
            android:id="@+id/telComercialCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpfCadastro"
            android:ems="10"
            android:inputType="number"
            android:hint="Tel - Comercial" />

        <Button
            android:id="@+id/enviarCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText14"
            android:layout_marginTop="13dp"
            android:background="@color/colorPrimary"
            android:text="Cadastrar"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
    </ScrollView>



    </LinearLayout>